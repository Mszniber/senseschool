<%= form_for @article do |f| %>

<div class="control-group">
  <%= f.label :lien, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :lien, :class => 'text_field' %>
  </div>
</div>

<div class="control-group">
  <%= f.label :texte, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_area :texte, :class => 'text_area', :rows => '5' %>
  </div>
</div>

<div class="control-group">
  <%= f.label :image, :class => 'control-label' %>
  <div class="controls">
    <%= f.file_field :image %>
  </div>
</div>

<div class="control-group">
  <%= f.label :date_parution, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :dateparu, :class => 'datepicker' %>
  </div>
</div> 

<div class="form-actions">
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
  articles_path, :class => 'btn' %>
</div>
<% end %>