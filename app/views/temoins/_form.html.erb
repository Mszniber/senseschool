<%= form_for @temoin do |f| %>

<div class="control-group">
    <%= f.label :nom, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nom, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :role, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :rang, :class => 'text_field' %>
    </div>
  </div>

<div class="control-group">
    <%= f.label :phrase, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :phrase, :class => 'text_area', :rows => '5' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :image, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :image %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :image_ecole, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :imagecole %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                presentation_path, :class => 'btn' %>
  </div>
<% end %>