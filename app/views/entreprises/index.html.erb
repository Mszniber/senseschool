<%end%>


<h4>Partenaires Entreprises</h4>

<% @entreprises.each do |entreprise| %>

<% if entreprise.sort == 1 %>


<a href="<%= entreprise.lien %>"><%= image_tag(entreprise.image.url(:icone)) %></a>&nbsp&nbsp
<% if user_signed_in? %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
edit_entreprise_path(entreprise), :class => 'btn btn-mini' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
entreprise_path(entreprise),
:method => :delete,
:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
:class => 'btn btn-mini btn-danger' %>
<% end %>

<% end %>

<% end %>
<br>
<p> Contactez-nous <a href="mailto:corporate@senseschool.cc">ici</a>.</p>

