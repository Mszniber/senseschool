<%= form_for @entrepreneur, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :nom, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nom, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :lien, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :lien, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :note_de_bas_de_page, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nbp, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :lien_bas_de_page, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :lien2, :class => 'text_field' %>
    </div>
  </div>



  <%= f.fields_for :ent_images do |iform| %>
        <% render 'ent_image_fields', :f => iform %>
        <% end %>
        <p><%= link_to_add_fields "Add image", f, :ent_images %></p>

  <%= f.fields_for :vidents do |vform| %>
        <% render 'vident_fields', :f => vform %>
        <% end %>
        <p><%= link_to_add_fields "Add video", f, :vidents %></p>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                entrepreneurs_path, :class => 'btn' %>
  </div>
<% end %>
