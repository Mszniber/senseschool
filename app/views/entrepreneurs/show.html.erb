<%- model_class = Entrepreneur -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><% for ent_image in @entrepreneur.ent_images %>
      <%= image_tag ent_image.image.url %>
      <% end %></dt>
  <dd><%= @entrepreneur.nom %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @entrepreneur.description %></dd>
  <dd><%= @entrepreneur.nbp %> cliquez <%= link_to "ici", @entrepreneur.lien2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lien) %>:</strong></dt>
  <dd><%= @entrepreneur.lien %></dd>
  <% for vident in @entrepreneur.vidents %>
        <% if vident.youvim == true %>
        <dd><iframe width="560" height="315" src="http://www.youtube.com/embed/<%= vident.link %>" frameborder="0" allowfullscreen></iframe></dd>
        <% else %>
        <dd><iframe src="http://player.vimeo.com/video/<%= vident.link %>" width="560" height="315" frameborder="0" allowFullScreen></iframe></dd>
        <% end %>
        <% end %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              entrepreneurs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_entrepreneur_path(@entrepreneur), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              entrepreneur_path(@entrepreneur),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
