<%- model_class = Entrepreneur -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:nom) %></th>
      <th><%= model_class.human_attribute_name(:lien) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @entrepreneurs.each do |entrepreneur| %>
      <tr>
        <td><%= link_to entrepreneur.nom, entrepreneur_path(entrepreneur) %></td>
        <td><a <%= link_to 'Site', entrepreneur.lien %></a></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_entrepreneur_path(entrepreneur), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      entrepreneur_path(entrepreneur),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_entrepreneur_path,
            :class => 'btn btn-primary' %>

            <%= link_to t('.posts', :default => t("helpers.links.posts")),
            posts_path,
            :class => 'btn btn-primary' %>
